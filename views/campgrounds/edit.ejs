<% layout('layouts/boilerplate') %> 
<div class="row ">
    <h1 class="text-center">Edit Query</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3 input-group">
                <label for="title" class="input-group-text">Title:</label>
                <input type="text" class="form-control" id="title" name="campground[title]"
                 value="<%=campgrounds.title%>" required>
                <div class="valid-feedback">
                    Looks Good!!
                </div>
            </div>
          
            <% if(campgrounds.images.length<10){ %> 
            <div class="mb-3 form-file custom-file">
             
                <!-- <input type="file" class="form-control" id="image" name="image" multiple>
                <label for="image" class="form-file-label ">
                    <span class="form-file-text custom-file-label"> Choose File..</span>
                    <span class="form-file-button">Browse</span>
                </label>  -->

                <input type="file" class="form-control" id="inputGroupFile02" name="image" multiple>
                <!-- <label class="input-group-text" for="inputGroupFile02">Upload</label> -->
            </div>
            <% } %> 
         
            
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"
                  required><%=campgrounds.description%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <% campgrounds.images.forEach(function(img,i){ %>
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" name="deleteImages[]" id="image-<%=i%>" value="<%=img.filename%>" >
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% }) %>  
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Edit Query</button>
            </div>
        </form>
        <a href="/campgrounds"><button class="btn btn-danger">All Queries</button></a>

    </div>
</div>
